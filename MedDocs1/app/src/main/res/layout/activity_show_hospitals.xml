    <TextView
        android:id="@+id/titleText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="24dp"
        android:text="MedDocs"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHighlight="#00945C5C"
        android:textColorHint="#00FFFFFF"
        android:textIsSelectable="false"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitleText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="Book your medical appointments easily"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText3" />

    <Button
        android:id="@+id/list"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_button"
        android:text="By list"
        android:textColor="#0ec0a6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText3" />

    <Button
        android:id="@+id/map"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_button"
        android:text="On map"
        android:textColor="#0ec0a6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list" />

</androidx.constraintlayout.widget.ConstraintLayout>